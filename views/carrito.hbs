        <input
          id="price"
          class="form-control"
          type="number"
          name="price"
          min="1"
          step="0.01"
          required
        />
      </div>
      <div class="form-group">
        <label for="thumbnail"><b>Url de imagen</b></label>
        <input
          id="thumbnail"
          class="form-control"
          type="url"
          name="thumbnail"
          required
        />
      </div>

