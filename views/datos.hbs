{{#if username}}
<div class="container-lg d-flex flex-column align-items-center">
  <img
    src="{{avatar}}"
    class="card-img-top mt-3"
    style="width:10rem;height:10rem;margin:auto;border-radius:50%;object-fit:cover"
  />
  <h1> Nombre: {{username}} {{lastname}}</h1>
  <p>Direccion: {{direccion}}</p>
  <p>Email: {{email}}</p>
  <a class="btn btn-dark text-center m-4" href="/logout">Desloguear</a>
  <a class="btn btn-success text-center m-4" href="/carrito/">Ver carrito</a>
{{else}}
  <h1>Ingresa para ver tu informacion</h1>
  <a class="btn btn-success text-center m-4" href="/login">Login</a>

{{/if}}
</div>